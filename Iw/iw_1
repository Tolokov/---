
#include <iostream>
#include "stdio.h"
#include <cmath> 

using namespace std;


int main()
{
    setlocale(LC_ALL, "russian");
    std::cout << "Привет мир!\n";

    // Вариант 11

    float v, h, r, x;
    float const pi = 3.14;

    cout << "Введите число v=";
    cin >> v;

    cout << "Введите число h=";
    cin >> h;

    r = (v * h + 1) / v + (pi * v * v);
    x = (pi * r * r) - (v * v * sin(r));

    cout << "\nЧисло r=" << r;
    cout << "\nЧисло x=" << x << "\n";
    system("pause");
    
}
